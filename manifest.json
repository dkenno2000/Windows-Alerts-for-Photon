{
  "name": "Windows Alerts for Photon",
  "description": "Shows a Windows notification whenever a coin graduates.",
  "version": "1.1",
  "manifest_version": 3,
  "icons": {
    "128": "img/remastered-logo.png"
  },
  "action": {
    "default_icon": { "128": "img/remastered-logo.png", "16": "img/remastered-logo.png", "48": "img/remastered-logo.png" },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "js/service-worker.js"
  },
  "host_permissions": [ "*://*.photon-sol.tinyastro.io/*" ],
  "permissions": [ "tabs", "storage" ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["*://*.photon-sol.tinyastro.io/*"],
      "js": ["lib/chart.js", "dist/remastered.bundle.js"],
      "css": ["css/remastered-core.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["img/*.png"],
      "matches": ["*://photon-sol.tinyastro.io/*"]
    }
  ]
}